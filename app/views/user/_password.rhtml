<div class="user_password">
  <table>
    <%= form_input :password_field, _("Password"), "password", :size => 30 %>
    <%= form_input :password_field, _("Password Confirmation"), "password_confirmation", :size => 30 %>
    <% if submit %>
      <%= form_input :submit_button, _('Change password') %>
    <% end %>
  </table>
</div>
