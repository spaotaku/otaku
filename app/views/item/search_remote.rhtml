      <% if item.num_val_8 %>
        | <%= h _('item_num_val_8') %>:<%= item.num_val_8 %>
      <% end %>
      <% if item.num_val_9 %>
        | <%= h _('item_num_val_9') %>:<%= item.num_val_9 %>
      <% end %>
   	  
      <% if item.num_val_a %>
         <%= h _('item_num_val_a') %>:<%= item.num_val_a %>
