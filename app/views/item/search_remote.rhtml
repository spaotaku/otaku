       | <%= h _('tatemono') %>:<%= item.num_val_j %><%= h _('heihou_meter') %>
      <% end %>

      <% if item.num_val_l %>
       | <%= h _('senyu') %>:<%= item.num_val_l %><%= h _('heihou_meter') %>
      <% end %>

      <% if item.str_val_1 != '' %>
       | <%= item.str_val_1 %>
      <% end %>

      <% if item.num_val_p %>
