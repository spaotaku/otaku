<% @items.each do |item| %>

<div class='spotitem'>
  	<span style="float: left">
  	<div id="load_content_bottun_div_#{item.id}">
      <%= link_to_remote(image_tag('/images/search.png'), {:url => { :action => 'load_content_remote', :id => item }}, :id => "load_content_button_#{item.id}") %>
    </div>
	</span>
    <h3>

      <%=h item.name %> < <%= h item.str_val_b %>-<%= h item.str_val_c %> > <span class='spacing'></span>
      
    </h3>
    <span class='content'>

      <div class='detail' >
      <%= item.category.name %>

      ■<%= link_to item.spot.address, :action => 'show_spot',
        :id => item.spot.id %>

      <% if item.num_val_h %>
       | <%= h _('tochi') %>:<%= item.num_val_h %><%= h _('heihou_meter') %>
