      <% end %>
      <% if item.num_val_n %>
        | <%= h _('item_num_val_n') %>:<%= item.num_val_n %>
      <% end %>
      <% if item.num_val_c %>
        | <%= h _('item_num_val_c') %>:<%= item.num_val_c %>
      <% end %>
      <% if item.num_val_d %>
        | <%= h _('item_num_val_d') %>:<%= item.num_val_d %>
      <% end %>
	  
      <% if item.str_val_4 != '' %>
        | <%= item.str_val_4 %>
      <% end %>
      <% if item.str_val_5 != '' %>
        :<%= item.str_val_5 %>
      <% end %>
      <% if item.num_val_7 %>
        <%= h _('kara_toho') %><%= item.num_val_7 %><%= h _('min') %>
