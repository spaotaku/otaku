      <% if titleoutflg == 0 %><br/><%= h _('facility')%>:<% titleoutflg = 1 %><% end %>   	
	  <br/><%= facilitycatname %>
	  <%= facilityname.join(" ,") %>
	  <% outflg = 0 %>
	<% end %>   
    <% facilitycatname = "【" + facility.facilitycat.name + "】:" %>
	<% facilityname = [] %>
  <% end %>
  <% if listitem['facility_' + facility.seq[0,2]] %>
    <% facilityname << facility.name %>
    <% outflg = 1 %>
  <% end %> 
<% end %>
    <% if outflg == 1 %>
