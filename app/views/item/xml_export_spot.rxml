xml.instruct!
xml.Workbook 'xmlns'=>'urn:schemas-microsoft-com:office:spreadsheet',
  'xmlns:ss'=>'urn:schemas-microsoft-com:office:spreadsheet' do
  xml.Styles do
    xml.Style 'ss:ID' => 1 do
      xml.Font 'ss:Bold' => 1
    end
  end
  xml.Worksheet 'ss:Name' => 'Sheet1' do
    xml.Table do
      5.times do
        xml.Column 'ss:Width' => 80
      end
      xml.Row 'ss:StyleID' => 1 do
          xml.Cell { xml.Data 'name', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'address', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'phone', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'fax', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'memo', 'ss:Type' => 'String' }
          xml.Cell { xml.Data 'longitude', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'latitude', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'homepage', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'email_1', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'image_url', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'longitude_tokyo_datum_dec', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'latitude_tokyo_datum_dec', 'ss:Type' => 'String'  }  
          xml.Cell { xml.Data 'longitude_tokyo_datum_ddmmsss', 'ss:Type' => 'String'  }  
          xml.Cell { xml.Data 'latitude_tokyo_datum_ddmmsss', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'user_id', 'ss:Type' => 'String'  }  
          xml.Cell { xml.Data 'group_id', 'ss:Type' => 'String'  }                   
          xml.Cell { xml.Data 'publish_level', 'ss:Type' => 'String'  }              
          xml.Cell { xml.Data 'address_wk1', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'zip', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'prefecture', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'address1', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'address2', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'building', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'text1', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'text2', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'text3', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'text4', 'ss:Type' => 'String'  }
          xml.Cell { xml.Data 'text5', 'ss:Type' => 'String'  }
      end
      @spots.each do |spot|
        xml.Row do
          xml.Cell { xml.Data spot.name, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.address, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.phone, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.fax, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.memo, 'ss:Type' => 'String' }
          xml.Cell { xml.Data spot.longitude, 'ss:Type' => 'Number' }
          xml.Cell { xml.Data spot.latitude, 'ss:Type' => 'Number' } 
          xml.Cell { xml.Data spot.homepage, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.email_1, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.image_url, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.longitude_tokyo_datum_dec, 'ss:Type' => 'Number' }  
          xml.Cell { xml.Data spot.latitude_tokyo_datum_dec, 'ss:Type' => 'Number' }   
          xml.Cell { xml.Data spot.longitude_tokyo_datum_ddmmsss, 'ss:Type' => ',Number' } 
          xml.Cell { xml.Data spot.latitude_tokyo_datum_ddmmsss, 'ss:Type' => 'Number' }
          xml.Cell { xml.Data spot.user_id, 'ss:Type' => 'Number' }                    
          xml.Cell { xml.Data spot.group_id, 'ss:Type' => 'Number' }                   
          xml.Cell { xml.Data spot.publish_level, 'ss:Type' => 'Number' }              
          xml.Cell { xml.Data spot.address_wk1, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.zip, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.prefecture, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.address1, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.address2, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.building, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.text1, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.text2, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.text3, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.text4, 'ss:Type' => 'String'  }
          xml.Cell { xml.Data spot.text5, 'ss:Type' => 'String'  }
        end
      end
    end
  end
end
