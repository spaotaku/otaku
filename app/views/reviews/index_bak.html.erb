<h1><%=h _('Listing reviews') %></h1>

<table>
  <tr>
    <th><%=h _('book_id') %></th>
    <th><%=h _('book title') %></th>
    <th><%=h _('item_id') %></th>
    <th><%=h _('class name') %></th>
    <th><%=h _('student_id') %></th>
    <th><%=h _('reviewer name') %></th>
    <th><%=h _('review body') %></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%=h review.shopitem_id %></td>
    <td><%=h review.shopitem.name %></td>
    <td><%=h review.item_id %></td>
    <td><%=h review.item.name %></td>
    <td><%=h review.student_id %></td>
    <td><%=h review.student.l_name + review.student.f_name %></td>
    <td><%=h review.body %></td>
    <td><%= link_to 'Show', :action => 'show', :id => review %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => review %></td>
    <td><%= link_to( _('destroy'), {:action => 'destroy', :id => review}, :confirm => _('Delete ?')) %></td>
  </tr>
<% end %>
</table>

