<% form_tag :action => 'list_shop', :method => 'get' do %>
  <%=h _('keyword for search item_name or spot_name:')%><%= text_field_tag 'keyword', params[:keyword] -%>
  <%= submit_tag _('Search') -%>
<% end %>
<div class="spotlist">
  <%= render :partial => 'listshop', :collection => @shops,
             :locals => {:size => ''} %>
</div>
